<!-- TABLA -->
<table id="tabla" class="table table-hover mt-2 d-none d-lg-table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Ciudad</th>
      <th scope="col">Sexo</th>
      <th scope="col">Teléfono</th>
      <th scope="col">F.Nacimiento</th>
      <th scope="col">Dirección</th>
      <th scope="col">Provincia</th>
      <th scope="col">F.Alta</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>	

  	{{#each this}}

  	<tr id="{{id}}">  	
  		<td class="nombre">{{nombre}}</td>
  		<td class="ciudad">{{ciudad}}</td>
  		<td class="sexo">{{sexo}}</td>
  		<td class="telefono">{{telefono}}</td>
  		<td class="fnac">{{formatDate fecha_nacimiento}}</td>
      <td class="direccion">{{direccion}}</td>
      <td class="provincia">{{provincia}}</td>
      <td class="fechaAlta">{{formatDate fechaAlta}}</td>
  		<td><i id='editar'><i class='fas fa-edit icono fa-lg' data-toggle='modal' data-target='#clienteModal' style='color:orange'></i></i></td>
  		<td><i id='borrar'><i class='fas fa-trash-alt icono fa-lg' style='color:red'></i></i></td>
      <td><i id='mapa_icon'><i class='fas fa-map-marker-alt icono fa-lg' style='color:blue'></i></i></td>
      <td><i id='vehiculo_icon'><i class='fas fa-car icono fa-lg' style='color:black'></i></i></td>
  	</tr> 

	{{/each}}	 

  </tbody>
</table>

<!-- CARDS -->
<div class="container d-lg-none">

  {{#each this}}

    <row>    
        <div class="col-12 container card border-dark mb-2">
          <div id="{{id}}" class="card-body text-center">
            <h5>{{nombre}}</h5>
            <p>{{direccion}}, {{ciudad}}</p>
            <p>{{telefono}}</p>
            <p>{{formatDate fecha_nacimiento}}</p>
            <hr>
            <p>Fecha de alta: {{formatDate fechaAlta}}</p>
            <i id='editar'><i class='fas fa-edit icono fa-2x mr-4' data-toggle='modal' data-target='#clienteModal' style='color:orange'></i></i>
            <i id='borrar'><i class='fas fa-trash-alt icono fa-2x mr-4' style='color:red'></i></i>
            <i id='mapa_icon'><i class='fas fa-map-marker-alt icono fa-2x mr-4' style='color:blue'></i></i>
            <i id='vehiculo_icon'><i class='fas fa-car icono fa-2x' style='color:black'></i></i>
          </div>
        </div>
    </row>

  {{/each}}

</div>