<!-- Modal -->
<div class="modal fade" id="clienteModal" tabindex="-1" role="dialog" aria-labelledby="clienteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="clienteModalLabel">{{titulo}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--Formulario-->
                <form id="form_registro">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" id="nombre_input" value="{{cliente.nombre}}" required>
                    </div>
                    <div class="form-group">
                        <label>Dirección</label>
                        <input type="text" class="form-control text-muted" id="direccion_input" value="{{cliente.direccion}}" required>
                    </div> 
                    <row class='no-gutters d-flex'>                   
                        <div class="form-group col-6">
                            <label>Ciudad</label>
                            <input type="text" class="form-control text-muted" id="ciudad_input" value="{{cliente.ciudad}}" required>
                        </div>
                        <div class="form-group col-5 offset-1">
                            <label>Provincia</label>
                            <input type="text" class="form-control text-muted" id="provincia_input" value="{{cliente.provincia}}" required>
                        </div> 
                    </row>

                    <row class='no-gutters d-flex'>
                        <div class="form-group col-3">
                            <small>Sexo</small>
                            <br>
                            {{#if sexo}}
                                <input type="radio" name="sexo" value="H" checked> Hombre<br>
                                <input type="radio" name="sexo" value="M"> Mujer
                            {{else}}
                                <input type="radio" name="sexo" value="H"> Hombre<br>
                                <input type="radio" name="sexo" value="M" checked> Mujer                        
                            {{/if}} 
                            <br>
                        </div>
                        <div class="form-group col-5 offset-4">
                            <label>Teléfono</label>
                            <input type="text" class="form-control" id="telefono_input" value="{{cliente.telefono}}" required>
                        </div>
                    </row>
                    
                    <div class="form-group">
                        <label>FechaNacimiento</label>
                        <input type="text" class="form-control datepicker" value="{{cliente.fecha_nacimiento}}" required>
                    </div>                     
                    {{#if fechaAlta}}
                    <div class="form-group">
                        <label>FechaAlta</label>
                        <input type="text" id="fechaAlta_input" class="form-control datepicker" value="{{cliente.fechaAlta}}" required>
                    </div>
                    {{/if}}            
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-info" id="boton_{{accion}}" data-id='{{cliente.id}}' data-dismiss="modal">{{accion}}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
